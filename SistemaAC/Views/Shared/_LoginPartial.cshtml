@using Microsoft.AspNetCore.Identity
@using ACTI.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hola @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" >
                <button type="submit" class="btn btn-primary">Cerrar sesion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">
                <button type="submit" class="btn btn-primary">Registrarse</button>
            </form>
        </li>
        <li class="nav-item">
            <form class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </form>
        </li>
    }
</ul>




















